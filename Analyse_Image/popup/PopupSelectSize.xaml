<Window x:Class="Analyse_Image.popup.PopupSelectSize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Analyse_Image.popup"
        mc:Ignorable="d"
        Title="Fenetre de selection de valeur" Height="163" Width="244">
    <Grid>
        <Slider HorizontalAlignment="Left" Margin="30,64,0,0" VerticalAlignment="Top" Width="181" Maximum="1000" Value="1" SmallChange="1" ValueChanged="SliderChangeValue" LargeChange="10" IsSnapToTickEnabled="True" TickFrequency="1"/>
        <TextBox x:Name="ValueTextBox" HorizontalAlignment="Left" Margin="30,41,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="181" PreviewTextInput="NumberValidationTextBox"/>
        <Label Content="Selectionnez une valeur" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Width="181"/>
        <Button Content="Selection" HorizontalAlignment="Left" Margin="55,90,0,0" VerticalAlignment="Top" Click="Done"/>
        <Button Content="Annuler" HorizontalAlignment="Left" Margin="141,90,0,0" VerticalAlignment="Top" Click="Cancel"/>
    </Grid>
</Window>
